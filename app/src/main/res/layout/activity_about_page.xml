                android:layout_width="match_parent"
                android:layout_height="142dp"
                app:srcCompat="@drawable/andreaphoto" />

            <TextView
                android:id="@+id/andreaBio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/andreaBiography" />

            <TextView
                android:id="@+id/lukeTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lukeName"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/lukeImage"
                android:layout_width="match_parent"
                android:layout_height="143dp"
                app:srcCompat="@drawable/lukephoto" />

            <TextView
                android:id="@+id/lukeBio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lukeBiography" />

            <TextView
                android:id="@+id/kennyTitle"
                android:layout_width="match_parent"
