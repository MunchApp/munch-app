                app:srcCompat="@drawable/kennyphoto" />

            <TextView
                android:id="@+id/kennyBio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/kennyBiography" />

            <TextView
                android:id="@+id/yasiraTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/yasiraName"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/yasiraImage"
                android:layout_width="match_parent"
                android:layout_height="122dp"
                app:srcCompat="@drawable/yasiraphoto" />

            <TextView
                android:id="@+id/yasiraBio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/yasiraBiography" />

            <TextView
                android:id="@+id/dataSourcesDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="48dp"
                android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp"
                android:text="@string/dataSources"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/toolsDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="48dp"
                android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp"
                android:text="@string/toolsDescription"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/gitLink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="48dp"
                android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp"
                android:text="@string/githubLink"
                android:textSize="18sp" />



        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>