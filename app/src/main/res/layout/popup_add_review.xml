<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/popup_edit"
    android:padding="20dp"
    android:background="@color/munchGreenDark">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="230dp">

        <TextView
            android:id="@+id/add_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/rambla"
            android:text="Add Review"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RatingBar
            android:id="@+id/ratingbar_on_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="95dp"
            android:layout_marginTop="5dp"
            android:isIndicator="false"
            android:progressTint="@color/munchOrangeDark"
            android:rating="4.5"
            android:scaleX=".5"
            android:scaleY=".5"
            android:transformPivotX="0dp"
            android:transformPivotY="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/add_prompt" />

        <EditText
            android:id="@id/reviewContent"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@color/munchOrangeLight"
            android:fontFamily="@font/hp_simplified_light_font"
            android:gravity="top|center"
            android:hint="Enter your feedback"
            android:inputType="textMultiLine"
            android:lines="8"
            android:maxLines="12"
            android:minLines="6"
            android:scrollbars="vertical"
            android:textColor="@color/munchGreenDark"
            android:textColorHint="@color/munchGreenDark"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/add_prompt" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/post"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_shape"
        android:backgroundTint="#FFFFFF"
        android:enabled="true"
        android:fontFamily="@font/rambla"
        android:text="POST"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <Button
        android:id="@+id/cancel"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_shape"
        android:backgroundTint="#FFFFFF"
        android:enabled="true"
        android:fontFamily="@font/rambla"
        android:text="CLOSE"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

</LinearLayout>

