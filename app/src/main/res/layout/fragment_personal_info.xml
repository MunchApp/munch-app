<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingBottom="?attr/actionBarSize">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/munchOrangeLight"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/profile_picture"
                    android:layout_width="102dp"
                    android:layout_height="93dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    app:srcCompat="@mipmap/ic_launcher_round" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/pi_first_and_last_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="30dp"
                        android:fontFamily="@font/hp_simplified"
                        android:text="FirstName LastName"
                        android:textColor="@color/munchGrey"
                        android:textSize="25sp" />

                    <TextView
                        android:id="@+id/city_and_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="20dp"
                        android:fontFamily="@font/hp_simplified"
                        android:text="Austin, Texas"
                        android:textColor="@color/munchOrangeDark"
                        android:textSize="20sp" />


                </LinearLayout>
                <ImageView
                    android:id="@+id/shadow"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/shadow" />
            </LinearLayout>

            <TextView
                android:id="@+id/edit_pi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/khand_medium"
                android:text="Your Information"
                android:textColor="@color/munchGrey"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/pi_email_prompt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/rambla"
                android:text="EMAIL"
                android:textColor="@color/munchGrey"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/pi_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="65dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/khand_light"
                android:text="email@host.com"
                android:textColor="@color/munchGrey"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="5">

                <View
                    android:layout_weight="4.5"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/munchGreyLight" />
            </LinearLayout>

            <TextView
                android:id="@+id/pi_dob_prompt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/rambla"
                android:text="DATE OF BIRTH"
                android:textColor="@color/munchGrey"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/pi_dob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="65dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/khand_light"
                android:text="12/12/12"
                android:textColor="@color/munchGrey"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="5">

                <View
                    android:layout_weight="4.5"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/munchGreyLight" />
            </LinearLayout>

            <TextView
                android:id="@+id/pi_phone_num_prompt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/rambla"
                android:text="PHONE NUMBER"
                android:textColor="@color/munchGrey"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/pi_phone_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="65dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/khand_light"
                android:text="(555)-555-5555"
                android:textColor="@color/munchGrey"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="5">

                <View
                    android:layout_weight="4.5"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/munchGreyLight" />
            </LinearLayout>

            <TextView
                android:id="@+id/pi_gender_prompt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/rambla"
                android:text="GENDER"
                android:textColor="@color/munchGrey"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/pi_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="65dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/khand_light"
                android:text="(fe)male"
                android:textColor="@color/munchGrey"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="5">

                <View
                    android:layout_weight="4.5"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/munchGreyLight" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="vertical"></LinearLayout>


        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>