<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@color/munchGreenDark" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        app:srcCompat="@drawable/shadow" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/profile_picture"
                    android:layout_width="102dp"
                    android:layout_height="93dp"
                    android:layout_marginTop="50dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@mipmap/ic_launcher_round" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/first_and_last_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/hp_simplified"
                android:text="FirstName LastName"
                android:textColor="@color/munchGreenDark"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/city_and_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/hp_simplified"
                android:text="Austin, Texas"
                android:textColor="@color/munchGreenDark"
                android:textSize="20sp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">

                <Space
                    android:id="@+id/left_spacer1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintHorizontal_weight=".5"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/block1"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:id="@+id/block1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_rectangle"
                    android:orientation="vertical"
                    app:layout_constraintHorizontal_weight="9"
                    app:layout_constraintLeft_toRightOf="@id/left_spacer1"
                    app:layout_constraintRight_toLeftOf="@id/right_spacer1"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/account_settings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/hp_simplified_light_font"
                        android:text="@string/accountSettings"
                        android:textColor="@color/munchGreenDark"
                        android:textSize="25sp" />

                    <View
                        android:layout_width="330dp"
                        android:layout_height="1dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:background="@color/munchGreyLight" />

                    <TextView
                        android:id="@+id/personal_information"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/rambla"
                        android:letterSpacing="0.05"
                        android:text="@string/personalInfo"
                        android:textColor="@color/munchGreenDark"
                        android:textSize="18sp" />

                    <View
                        android:layout_width="330dp"
                        android:layout_height="1dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:background="@color/munchGreyLight" />

                    <TextView
                        android:id="@+id/your_reviews"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/rambla"
                        android:letterSpacing="0.05"
                        android:text="@string/yourReviews"
                        android:textColor="@color/munchGreenDark"
                        android:textSize="18sp" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="20dp" />

                </LinearLayout>

                <Space
                    android:id="@+id/right_spacer1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintHorizontal_weight=".5"
                    app:layout_constraintLeft_toRightOf="@id/block1"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">

                <Space
                    android:id="@+id/left_spacer2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintHorizontal_weight=".5"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/block2"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:id="@+id/block2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_rectangle"
                    android:orientation="vertical"
                    app:layout_constraintHorizontal_weight="9"
                    app:layout_constraintLeft_toRightOf="@id/left_spacer2"
                    app:layout_constraintRight_toLeftOf="@id/right_spacer2"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/owner_settings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/hp_simplified_light_font"
                        android:text="@string/ownerSettings"
                        android:textColor="@color/munchGreenDark"
                        android:textSize="25sp" />

                    <View
                        android:layout_width="330dp"
                        android:layout_height="1dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:background="@color/munchGreyLight" />

                    <TextView
                        android:id="@+id/manage_trucks"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/rambla"
                        android:letterSpacing="0.05"
                        android:text="@string/manageTruck"
                        android:textColor="@color/munchGreenDark"
                        android:textSize="18sp" />

                    <View
                        android:layout_width="330dp"
                        android:layout_height="1dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:background="@color/munchGreyLight" />

                    <TextView
                        android:id="@+id/list_truck"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/rambla"
                        android:letterSpacing="0.05"
                        android:text="@string/listTruck"
                        android:textColor="@color/munchGreenDark"
                        android:textSize="18sp" />

                    <View
                        android:layout_width="330dp"
                        android:layout_height="1dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:background="@color/munchGreyLight" />

                    <TextView
                        android:id="@+id/learn_about_listing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/rambla"
                        android:letterSpacing="0.05"
                        android:text="@string/learn"
                        android:textColor="@color/munchGreenDark"
                        android:textSize="18sp" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="20dp" />
                </LinearLayout>

                <Space
                    android:id="@+id/right_spacer2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintHorizontal_weight=".5"
                    app:layout_constraintLeft_toRightOf="@id/block2"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">

                <Space
                    android:id="@+id/left_spacer3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintHorizontal_weight=".5"
                    app:layout_constraintRight_toLeftOf="@id/sign_in_out"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/sign_in_out"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_shape"
                    android:backgroundTint="@color/munchOrangeDark"
                    android:fontFamily="@font/rambla"
                    android:text="SIGN IN"
                    android:textColor="@color/munchOrangeDark"
                    android:textSize="25sp"
                    app:layout_constraintHorizontal_weight="9"
                    app:layout_constraintLeft_toRightOf="@id/left_spacer3"
                    app:layout_constraintRight_toLeftOf="@id/right_spacer3"
                    app:layout_constraintTop_toTopOf="parent" />

                <Space
                    android:id="@+id/right_spacer3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintHorizontal_weight=".5"
                    app:layout_constraintLeft_toRightOf="@id/sign_in_out"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_height="100dp">
            </Space>
        </LinearLayout>
    </ScrollView>


</LinearLayout>