<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#FFFFFF"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_favorites"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="22dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="8dp"
                android:text="Favorites"
                android:textSize="30sp"
                android:fontFamily="@font/hp_simplified_font"
                android:textColor="@color/munchOrange"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/search_bar_pg1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Space
                        android:id="@+id/spacer1"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        app:layout_constraintHorizontal_weight=".5"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/search_explore_pg1"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:id="@+id/search_explore_pg1"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/ex_search_bar"
                        android:fontFamily="sans-serif"
                        android:hint="SEARCH YOUR FAVORITES"
                        android:inputType="textEmailAddress"
                        android:paddingLeft="60dp"
                        android:paddingBottom="3dp"
                        android:textColorHint="@color/munchGrey"
                        android:textSize="15sp"
                        app:layout_constraintHorizontal_weight="9"
                        app:layout_constraintLeft_toRightOf="@id/spacer1"
                        app:layout_constraintRight_toLeftOf="@id/spacer2"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:src="@drawable/ex_search_icon"
                        app:layout_constraintBottom_toBottomOf="@id/search_explore_pg1"
                        app:layout_constraintLeft_toLeftOf="@id/search_explore_pg1"
                        app:layout_constraintTop_toTopOf="@id/search_explore_pg1"
                        app:layout_constraintVertical_bias=".45" />

                    <Space
                        android:id="@+id/spacer2"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        app:layout_constraintHorizontal_weight="0.5"
                        app:layout_constraintLeft_toRightOf="@id/search_explore_pg1"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="389dp"
                    android:layout_height="261dp"
                    android:layout_marginTop="20dp"
                    android:clickable="true"
                    android:src="@drawable/temp_dee_dee"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/online_circle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/circle"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="10dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/restaurantTitle"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/khand_medium"
                    android:text="Dee Dee"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/restaurantDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/khand_light"
                    android:layout_marginRight="25dp"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:text="0.1 Miles Away" />
            </LinearLayout>

            <TextView
                android:id="@+id/onlineStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/khand_light"
                android:layout_marginLeft="25dp"
                android:text="ONLINE" />

            <TextView
                android:id="@+id/address1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/khand_light"
                android:layout_marginLeft="25dp"
                android:text="4202 Manchaca Rd\nAustin TX, 78745" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="5">

                <View
                    android:layout_weight="4.5"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/munchGreyLight" />
            </LinearLayout>

            <!-- DUPLICATE CARD-->


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView22"
                    android:layout_width="389dp"
                    android:layout_height="261dp"
                    android:layout_marginTop="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:src="@drawable/temp_arloscropped" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/online_circle2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/fv_offline_circle"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="10dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/restaurantTitle2"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/khand_medium"
                    android:text="Arlo's"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/restaurantDistance2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/khand_light"
                    android:layout_marginRight="25dp"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:text="1.8 Miles Away" />
            </LinearLayout>

            <TextView
                android:id="@+id/onlineStatus2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/khand_light"
                android:layout_marginLeft="25dp"
                android:text="OFFLINE" />

            <TextView
                android:id="@+id/address12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/khand_light"
                android:layout_marginBottom="60dp"
                android:layout_marginLeft="25dp"
                android:text="2908 Fruth St\nAustin TX, 78745" />

        </LinearLayout>

    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>